<Window x:Class="Sema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sema"
        mc:Ignorable="d"
        Title="Semaphore" Height="300" Width="450" Loaded="Window_Loaded" Closing="Window_Closing">
    <!--Icon="Resources/Icon1.ico"-->
    <Window.Resources>
        <local:DataSet1 x:Key="dataSet1"/>
        <CollectionViewSource x:Key="sEMAPHOREViewSource" Source="{Binding SEMAPHORE, Source={StaticResource dataSet1}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource sEMAPHOREViewSource}" Margin="10">
        <DataGrid x:Name="sEMAPHOREDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,10,10,10" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="tABLE_NAMEColumn" Binding="{Binding TABLE_NAME}" Header="TABLE NAME" Width="1*"/>
                <DataGridTextColumn x:Name="uSER_NAMEColumn" Binding="{Binding USER_NAME}" Header="USER NAME" Width=".5*"/>
                <DataGridTextColumn x:Name="sTART_TIMEColumn" Binding="{Binding START_TIME}" Header="START TIME" Width=".5*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
