<Window x:Class="Sema.Windows.AskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sema.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AskWindow" Height="210" Width="510" Closed="Window_Closed" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" Name="label_ask" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Button Grid.Column="0" Grid.Row="1" Name="button_update" Margin="20" Padding="10" Click="button_update_Click" >Отобрать</Button>
        <Button Grid.Column="1" Grid.Row="1" Name="button_ok" Margin="20" Padding="10" Click="button_ok_Click" >Ok</Button>
        
    </Grid>
</Window>
